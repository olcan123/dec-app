{
  "name": "dec-app",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "nuxt dev",
    "dev:supabase": "dotenv -e config/.env.supabase -- nuxt dev",
    "build": "nuxt build",
    "build:supabase": "dotenv -e config/.env.supabase -- nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "preview:supabase": "dotenv -e config/.env.supabase -- nuxt preview",
    "postinstall": "nuxt prepare",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:supabase:migrate": "dotenv -e config/.env.supabase -- npx prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:supabase:seed": "dotenv -e config/.env.supabase prisma db seed"
  },
  "dependencies": {
    "@meforma/vue-toaster": "^1.3.0",
    "@nuxt/image": "1.11.0",
    "@pinia/nuxt": "0.11.2",
    "@prisma/client": "^6.18.0",
    "@tailwindcss/vite": "^4.1.14",
    "@vee-validate/zod": "^4.15.1",
    "nuxt": "^4.2.0",
    "pinia": "^3.0.3",
    "tailwindcss": "^4.1.14",
    "vee-validate": "^4.15.1",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.18.0",
    "tsx": "^4.19.1"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
